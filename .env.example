# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/student_identification
# Or use SQLite for development: sqlite:///./student_identification.db

# JWT Secret
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index.bin
FAISS_METADATA_PATH=./data/faiss_metadata.json

# Model Paths
GFPGAN_MODEL_PATH=./models/GFPGANv1.4.pth
REALESRGAN_MODEL_PATH=./models/RealESRGAN_x4plus.pth
ADAFACE_MODEL_PATH=./models/adaface_ir101_webface12m.ckpt

# Recognition Configuration
SIMILARITY_THRESHOLD=0.45
EMBEDDING_DIMENSION=512
FACE_SIZE=112

# Performance
MAX_WORKERS=4
BATCH_SIZE=8
DEVICE=cpu  # or cuda

# Frontend
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/system.log

# Security
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
